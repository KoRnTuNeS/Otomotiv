
@{
    ViewBag.Title = "Contact";
    Layout = "~/Shared/_LayoutContact.cshtml";
}
<div class="col-md-5 col-lg-offset-1 col-md-offset-1 padding-right-none xs-padding-left-none sm-padding-left-none xs-margin-top-30">
    <div class="contact_wrapper information_head">
        <h3 class="margin-bottom-25 margin-top-none">İLETİŞİM FORMU</h3>
        <div class="form_contact margin-bottom-20">
            <div id="result"></div>
            <fieldset id="contact_form">
                <form action="/Home/Contact" method="post">
                    <input type="text" name="txtAd" class="form-control margin-bottom-25" placeholder="Adınız..." required/>
                    @if (ViewBag.Hata1 != null)
                    {
                        string hatalar = ViewBag.Hata1;
                        <span>@hatalar</span>
                    }
                    <br />
                    <br />
                    <input type="email" name="txtEmail" class="form-control margin-bottom-25" placeholder="Email adresiniz..." required/>
                    @if (ViewBag.Hata2 != null)
                    {
                        string hatalar = ViewBag.Hata2;
                        <span>@hatalar</span>
                    }
                    <br />
                    <br />
                    <textarea name="txtAciklama" class="form-control margin-bottom-25 contact_textarea" rows="7" placeholder="Mesajınız..." required></textarea>
                    @if (ViewBag.Hata3 != null)
                    {
                        string hatalar = ViewBag.Hata3;
                        <span>@hatalar</span>
                    }
                    <br />
                    <br />
                    <input type="submit" value="Gönder">
                </form>
            </fieldset>
        </div>
    </div>
</div>

