
@{
    ViewBag.Title = "Tekliflerim";
    Layout = "~/Shared/_LayoutEmpty.cshtml";
}
@model List<SoldOrder>
@section Head{
<style>
  table {
  border-collapse: collapse;
  width: 100%;
}

  th, td {
  text-align: left;
  padding: 8px;
}

  tr:nth-child(even) {
  background-color: #f2f2f2;
}
a {
  color: #337ab7;
  text-decoration: none;
}
a:hover,
a:focus {
  color: #23527c;
  text-decoration: underline;
}
a:focus {
  outline: thin dotted;
  outline: 5px auto -webkit-focus-ring-color;
  outline-offset: -2px;
}
</style>
}
<div>
    <table>
        <tr>
            <th>Araç Başlığı</th>
            <th>Fiyat</th>
            <th>Taksit</th>
            <th>Aylık Ödeme</th>
            <th>Teklif Tarihi</th>
            <th>Ödeme Bitiş Tarihi</th>
            <th>Sil</th>
        </tr>
        @foreach (SoldOrder item in Model)
        {
            <tr>
                <td>@item.Vehicle.ProductName</td>
                <td>@item.SoldPrice</td>
                <td>@Math.Floor(item.SoldPrice / item.MonthlyPaypments)</td>
                <td>@item.MonthlyPaypments</td>
                <td>@item.SoldDate</td>
                <td>@item.MonthlyPaypmentDate</td>
                <td><a href="/Home/TeklifSil/@item.ID">Sil</a></td>
            </tr>
        }
    </table>
</div>

@section Login{
